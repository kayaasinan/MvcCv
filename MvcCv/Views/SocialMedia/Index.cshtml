@using MvcCv.Models.Entity
@model List<TblSocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Hesaplarım</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Sosyal Medya Ekle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">Id</th>
                                            <th>Sosyal Medya</th>
                                            @*<th>Link</th>
                                                <th style="width: 40px">İcon</th>*@
                                            <th>Durum</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@x.Id</td>
                                                <td>@x.SMName </td>
                                                @*<td>@x.SMLink</td>
                                                    <td>@x.SMIcon</td>*@
                                            <td>@(x.Status==true ? "Aktif" : "Pasif")</td>
                                                <td>
                                                    <a href="/SocialMedia/UpdateSocialMedia/@x.Id" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                        <i class="fa fa-edit"></i> Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/SocialMedia/RemoveSocialMedia/@x.Id" class="btn btn-sm btn-outline-danger me-1" title="Sil">
                                                        <i class="fa fa-trash"></i> Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Sosyal Medya Ekleme Penceresi</h2>
                    </div>
                    <form method="post" action="/SocialMedia/AddSocialMedia">
                        <div class="modal-body">
                            <label>Sosyal Medya İsmi</label>
                            <input type="text" name="SMName" class="form-control" />
                            <br />
                            <label>Sosyal Medya Linki</label>
                            <input type="text" name="SMLink" class="form-control" />
                            <br />
                            <label>Sosyal Medya İconu</label>
                            <input type="text" name="SMIcon" class="form-control" />
                            <br />
                            <button class="btn btn-success">Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


