@using MvcCv.Models.Entity
@model List<TblCertificates>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int i = 0;
}
<br />
<h2 style="text-align: center; font-weight: bold; color: #343a40;">Sertifika ve Ödüller Listesi - Admin Paneli</h2>
<br />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var y in Model)
                                    {
                                        string btnColor = "btn btn-success";
                                        if (i % 2 == 1)
                                        {
                                            btnColor = "btn btn-primary";
                                        }
                                        <div class="time-label">
                                            <a href="/Certificate/UpdateCertificate/@y.Id" class="@btnColor">
                                                <span class="@btnColor">
                                                    @y.Date
                                                </span>
                                            </a>
                                        </div>
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @y.Description
                                                </div>
                                                <div class="timeline-footer">
                                                </div>
                                            </div>
                                        </div>
                                        i++;
                                    }
                                </div>
                                <a href="/Certificate/AddCertificate/" class="btn btn-info btn-lg">Sertifika Ekle</a>
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</body>
</html>

