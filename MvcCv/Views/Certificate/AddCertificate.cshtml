@model MvcCv.Models.Entity.TblCertificates
@{
    ViewBag.Title = "AddCertificate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Sertifika Ekleme Sayfası</h4>
<br />
<form method="post">
    @Html.Label("Sertifika Açıklaması")
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", required = "required" })
    @Html.ValidationMessageFor(x => x.Description, "")
    <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control", required = "required" })
    @Html.ValidationMessageFor(x => x.Date, "")
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>


